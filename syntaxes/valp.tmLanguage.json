{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Valp",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#numbers"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.valp",
					"match": "\\b(class|def|var|const)\\b"
				},
				{
					"name": "keyword.control.valp",
					"match": "\\b(if|while|for|return|switch|print)\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.valp",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.valp",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.valp",
					"match": "(//.*)"
				}
			]
		},
		"numbers": {
			"name": "constant.numeric.valp",
			"match": "\\b[0-9]+(\\.[0-9]+)?\\b"
		}
	},
	"scopeName": "source.vp"
}